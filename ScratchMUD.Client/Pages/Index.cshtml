@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="container">
    <h1 class="display-4 text-center">Welcome to ScratchMUD</h1>
    <ul class="row col-12" 
        id="messagesTextArea" 
        style="
            display:flex;
            list-style:none; 
            flex-direction:column; 
            flex-wrap:wrap; 
            align-items:flex-end;
            align-content:flex-end;
            justify-content:center; 
            margin-bottom:5px; 
            background-color:dimgray; 
            font-family:Consolas; 
            color:lightgray;
            height:500px;
            -webkit-flex-flow: row wrap">
        <li style="margin:5px; padding:2px; color:gray; width:100%">Test 1</li>
        <li style="margin:5px; padding:2px; color:gray; width:100%">Test 2</li>
        <li style="margin:5px; padding:2px; color:gray; width:100%">Test 3</li>
        <li style="margin:5px; padding:2px; color:gray; width:100%">Test 4</li>
        <li style="margin:5px; padding:2px; color:gray; width:100%">Test 5</li>
        <li style="margin:5px; padding:2px; color:gray; width:100%">Test 6</li>
    @*<textarea id="messagesTextArea" class="form-control" rows="20" readonly style="background-color:dimgray; font-family:Consolas; color:lightgray"></textarea>*@
    </ul>
    <div class="row col-12" style="margin-bottom:5px">
        <input type="text" id="userCommand" class="col-12"/>
    </div>
    <div class="row col-12">
        <button id="connectEventHub" class="btn btn-primary col-lg-4 col-md-12">Connect to SignalR</button>
        <button id="sendUserCommand" class="btn col-lg-4 col-md-12">Send</button>
        <button id="sendTestMessages" class="btn col-lg-4 col-md-12">Send Test Messages</button>
    </div>
</div>
<script src="~/lib/signalr/dist/browser/signalr.js"></script>
<script src="~/js/serverEvents.js"></script>